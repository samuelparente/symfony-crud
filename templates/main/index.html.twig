{% extends 'base.html.twig' %}

{% block title %}Hello MainController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>Hello {{ controller_name }}! ✅</h1>
    <h1>Hello {{ my_variable }}! ✅</h1>
    <h1>Hello {{ my_variable|lower }}! ✅</h1>
    <h1>Variable length is: {{ my_variable|length }} ✅</h1>
    {{dump(my_variable)}}
    This friendly message is coming from:
    <ul>
        <li>Your controller at <code>C:/symfony7/src/Controller/MainController.php</code></li>
        <li>Your template at <code>C:/symfony7/templates/main/index.html.twig</code></li>
    </ul>
</div>
{% endblock %}
